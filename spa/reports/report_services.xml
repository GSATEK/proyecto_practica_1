<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_services_document">
		<t t-call="web.external_layout">
			<div class="page">
				<h2>Servicios - Informe</h2>
				<t t-foreach="docs" t-as="doc">
					<h3>Trabajador: <t t-esc="doc.employee_id.name"/></h3>
					<h3><t t-esc="doc.name"/></h3>
					<p><t t-esc="doc.description or ''"/></p>
					<!-- Mostrar servicios asociados -->
					<t t-if="doc.line_ids">
						<h4>Servicios seleccionados:</h4>
						<table class="table table-sm">
							<thead>
								<tr>
									<th>Nombre</th>
									<th>Precio Unitario</th>
								</tr>
							</thead>
							<tbody>
								<t t-set="total_price" t-value="0"/>
								<t t-foreach="doc.line_ids" t-as="line">
									<tr>
										<td><t t-esc="line.service_id.name"/></td>
										<td><t t-esc="line.unit_price"/></td>
									</tr>
									<t t-set="total_price" t-value="total_price + (line.unit_price or 0)"/>
								</t>
							</tbody>
						</table>
						<h5>Precio total: <t t-esc="total_price"/></h5>
					</t>
				</t>
			</div>
		</t>
	</template>

	<report id="action_report_services" model="hr.services.report" string="Servicios" report_type="qweb-pdf" name="proyecto_practica_1_tmp.report_services_document" file="proyecto_practica_1_tmp.report_services_document"/>

</odoo>
