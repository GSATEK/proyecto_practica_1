<?xml version="1.0" encoding="utf-8"?>
	<odoo>
		<template id="report_services_document">
			<t t-call="web.html_container">
				<t t-call="web.external_layout">
					<div class="page">
						<h2>Servicios - Informe</h2>
						<t t-foreach="docs" t-as="doc">
							<table class="table table-sm table-bordered">
								<thead>
								<tr>
									<th>Empleado</th>
									<th>Fecha</th>
									<th>Descripci√≥n del Servicio</th>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="doc.hr_service_record_ids" t-as="record">
									<tr>
										<td><span t-esc="record.employee_id.name"/></td>
										<td><span t-esc="record.date and record.date.strftime('%Y-%m-%d')"/></td>
										<td><span t-esc="record.description"/></td>
									</tr>
								</t>
							</tbody>
							
						</table>
						<table>
							<thead>
								<tr>
									<th>Cantidad</th>
									<th>Precio Unitario</th>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="doc.hr_service_record_ids.line_ids" t-as="line">
									<tr>
										<td><span t-esc="line.quantity" /></td>
										<td><span t-esc="line.unit_price" /></td>
									</tr>	
								</t>
							</tbody>
						</table>
					</t>
				</div>
			</t>
			</t>
		</template>

		<record id="action_report_services" model="ir.actions.report">
			<field name="name">Print Services Report</field>
			<field name="model">wizard.generate.employee.report</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">spa.report_services_document</field>
			<field name="report_file">spa.report_services_document</field>
			<field name="print_report_name">'Servicios'</field>
		</record>
	</odoo>
