<odoo>
    <record id="view_hr_employee_services_report" model="ir.ui.view">
        <field name="name">view_hr_employee_services_report_tree</field>
        <field name="model">hr.employee.services.record</field>
        <field name="arch" type="xml">
            <tree >
                <field name="employee_id"/>
                <field name="partner_id"/>
                <field name="commission_rate"/>
                <field name="total_amount" widget="monetary"/>
                <field name="currency_id" string="Moneda" invisible="0" />
            </tree>
        </field>
    </record>


    <record id="view_hr_employee_services_form" model="ir.ui.view">
        <field name="name">view_hr_employee_services_form</field>
        <field name="model">hr.employee.services.record</field>
        <field name="arch" type="xml">
            <form string="Employee Service Report">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="partner_id"/>
                        <field name="commission_rate"/>
                        <field name="total_amount" widget="monetary" />
                        <field name="currency_id" string="Moneda" invisible="0" />
                    </group>
                    <notebook>
                        <page string="Service Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" widget="monetary" />
                                    <field name="subtotal" widget="monetary" />
                                    <field name="currency_id" invisible="0" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_views_hr_employee_services_report" model="ir.actions.act_window">
        <field name="name">Reportes</field>
        <field name="res_model">hr.employee.services.record</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hr_employee_services_report" />
    </record>

    <menuitem id="menu_hr_employee_services_report" name="Reporte Empleado" action="action_views_hr_employee_services_report" />
</odoo>