<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_wizard_add_service" model="ir.ui.view">
        <field name="name">view_form_wizard_add_service</field>
        <field name="model">wizard.add.employee.service</field>
        <field name="arch" type="xml">
            <form string="Agregar servicios">
                <group>
                    <field name="employee_id"/>
                    <field name="partner_id"/>
                </group>

                <!-- Lista tipo ventas/MRP -->
                <field name="line_ids"
                    widget="one2many_list"
                    editable="bottom"
                    context="{'default_wizard_id': id}">
                    <tree string="LÃ­neas de servicio">
                        <field name="wizard_id" invisible="1"/>
                        <field name="sequence" widget="handle"/>
                        <field name="product_id" required="1" options="{'no_open': True}"/>
                        <field name="quantity"/>
                        <field name="unit_price"/>
                        <field name="subtotal" readonly="1"/>
                    </tree>
                </field>

                <footer>
                    <button string="Crear reporte" name="action_add_service" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="view_action_wizard_add_service" model="ir.actions.act_window">
        <field name="name">Agregar Servicio</field>
        <field name="res_model">wizard.add.employee.service</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_form_wizard_add_service"/>
        <field name="target">new</field>
    </record>

</odoo>