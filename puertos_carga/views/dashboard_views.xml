<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_port_tree" model="ir.ui.view">
        <field name="name">fleet.port.tree</field>
        <field name="model">fleet.port</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="is_occupied"/>
                <field name="current_vehicle_id"/>
            </tree>
        </field>
    </record>

    <record id="action_ports" model="ir.actions.act_window">
        <field name="name">Puertas</field>
        <field name="res_model">fleet.port</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_puertos_root" name="Puertos"/>
    <menuitem id="menu_puertos" name="Plazas" parent="menu_puertos_root" action="action_ports"/>
</odoo>