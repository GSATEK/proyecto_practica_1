<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_fleet_ports_tree" model="ir.ui.view">
        <field name="name">view_fleet_ports_tree</field>
        <field name="model">fleet.ports</field>
        <field name="arch" type="xml">
            <tree>
                <field name="port_id" readonly="1"/>
                <field name="port_name" />
                <field name="port_zone" />
                <field name="port_status" />
                <field name="vehicle_id" />
            </tree>
        </field>
    </record>

    <record id="view_fleet_ports_form" model="ir.ui.view">
        <field name="name">fleet.ports.form</field>
        <field name="model">fleet.ports</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <field name="qr_code" class="oe_avatar" widget="image" readonly="1"/>

                    <div class="oe_title">
                        <h1>
                            <field name="port_id" readonly="1" placeholder="ID del Puerto"/>
                        </h1>
                    </div>

                    <group>
                        <field name="port_name"/>
                        <field name="port_zone"/>
                        <field name="port_status" readonly="1"/>
                        <field name="vehicle_id"/>
                    </group>

                    <separator string="Información Adicional"/>

                    <notebook>
                        <page string="Historial de Asignaciones">
                            <field name="history_ids" readonly="1">
                                <tree string="Historial de Vehículos Asignados">
                                    <field name="vehicle_id"/>
                                    <field name="time_in"/>
                                    <field name="time_out"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_views_fleet_ports" model="ir.actions.act_window">
        <field name="name">fleet_ports</field>
        <field name="res_model">fleet.ports</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <h2>No se ha añadido ningun puerto</h2>
        </field>
    </record>

    <menuitem id="fleet_port_menu" name="Puerto" action="action_views_fleet_ports"/>

</odoo>
